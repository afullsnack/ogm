---
// Content for the dashboard after login
import FooterTimer from "@components/FooterTimer";
import Header from "@components/header/header.astro";
import Sider from "@components/sider/sider.tsx";
import Icon from "astro-icon";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body class="grid w-screen h-screen bg-slate-800">
    <Header />
    <div
      class="flex items-start justify-items-start justify-start w-screen h-screen"
      style="height: calc(100vh-80px);">
      <Sider client:load />
      <slot />
    </div>
    <div class="w-full h-6 bg-blue-500 sticky bottom-0 right-0 left-0 flex items-center justify-end px-5">
      <span class="text-xs text-white h-full px-2 flex items-center justify-center bg-slate-400/60 hover:bg-slate-400/40 hover:cursor-pointer">
        <Icon name="bi:chat" class="w-3 h-3 mr-2" />
        CONTACT US
      </span>
      <FooterTimer client:load />
    </div>

    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */

      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
