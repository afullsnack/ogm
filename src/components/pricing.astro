---
import { Tick } from "@components/ui/icons";
import Link from "@components/ui/link.astro";

const { plan } = Astro.props;
---

<div class="items-stretch flex">
  <div
    class="flex flex-col justify-between w-full order-first lg:order-none border-2 border-[#D8DEE9] border-opacity-50 py-5 px-6 rounded-md">
    <div>
      <div class="text-start">
        <h4 class="text-lg font-bold text-gray-800">{plan.name}</h4>
        <p
          class="mt-1 text-xs font-light text-black md:text-sm">
          {plan.sub}
        </p>
      </div>
      <ul class="grid mt-8 text-left gap-y-4">
        {
          plan.features.map((item) => (
            <li class="flex items-start gap-3 text-gray-800">
              <Tick class="w-6 h-6 text-blue-600" />
              <span>{item}</span>
            </li>
          ))
        }
      </ul>
    </div>
    <div class="flex mt-8">
      <Link
        href={plan.button.link || "#"}
        block
        class="capitalize text-sm"
        style="primary">
        {plan.button.text}
      </Link>
    </div>
  </div>
</div>
